
<h1>New Task</h1>

<%= form_for(@task) do |f| %>
  <%= f.label :title %><br />
  <%= f.text_field :title %>
  <br>

  <%= f.label :description %><br />
  <%= f.text_field :description %>

  <%= f.submit %>
<% end %>

<h1>All The Tasks</h1>
<ul>
  <% @tasks.each do |task| %>
    <li><b><%=task.title%></b> - <%= task.description %></li>
  <% end %>
</ul>